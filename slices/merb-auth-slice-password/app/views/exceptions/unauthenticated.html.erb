	  <div class="span-7">
	    <input type="password" watermark="{html:'Enter Your Password Here',cls:'input-watermarked'}" class="span-7 title" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>"/>
	  </div>
